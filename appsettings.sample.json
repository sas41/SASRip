{
    // Server configuration
    "Urls": "http://0.0.0.0:54100",
    "AllowedHosts": "*",

    // Logging configuration
    "Logging": {
        "LogLevel": {
            "Default": "Information", // Options: Trace, Debug, Information, Warning, Error, Critical
            "Microsoft": "Warning", // Reduce Microsoft library noise
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },

    // Application settings
    "KeepFiles": "false",
    "UseEnvironmentVariables": "true",
    "EnableVerboseLogging": "false", // Set to "true" for detailed application logs
    "YoutubeDLPath": "yt-dlp", // Path to yt-dlp binary (usually just "yt-dlp")
    "LogPath": "/var/logs/sasrip", // Directory for application logs

    // Video Download arguments for yt-dlp
    "VideoArguments": "--no-check-certificate --no-playlist --format bestvideo[ext=webm]+bestaudio[ext=webm]/bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=webm]/best[ext=mp4]/bestvideo+bestaudio/best",
    // Alternative video quality examples:
    // "VideoArguments": "--no-check-certificate --no-playlist --format best[height<=720]",     // Max 720p
    // "VideoArguments": "--no-check-certificate --no-playlist --format best[height<=1080]",    // Max 1080p
    // "VideoArguments": "--no-check-certificate --no-playlist --format worst",                 // Lowest quality

    // Audio Download arguments for yt-dlp
    "AudioArguments": "--no-check-certificate --no-playlist --extract-audio --audio-format mp3",
    // Alternative audio format examples:
    // "AudioArguments": "--no-check-certificate --no-playlist --extract-audio --audio-format flac",  // FLAC
    // "AudioArguments": "--no-check-certificate --no-playlist --extract-audio --audio-format wav",   // WAV
    // "AudioArguments": "--no-check-certificate --no-playlist --extract-audio --audio-format aac",   // AAC

    // File naming templates (uses yt-dlp template syntax)
    "VideoName": "%(title).100s - (%(resolution)s).%(ext)s", // "Video Title - (1080p).mp4" (Max 100 character for the title)
    "AudioName": "%(title).100s.%(ext)s", // "Audio Title.mp3" (Max 100 character for the title)

    // Alternative naming examples:
    // "VideoName": "%(uploader)s - %(title)s - %(upload_date)s.%(ext)s",     // "Channel - Title - 20240101.mp4"
    // "AudioName": "%(artist)s - %(track)s.%(ext)s",                         // "Artist - Track.mp3"
    // "VideoName": "%(title)s [%(id)s].%(ext)s",                             // "Title [dQw4w9WgXcQ].mp4"

    // Cache settings
    "CachedMediaCheckupTimeSeconds": "300",
    "CachedMediaLifeTimeSeconds": "3600"
}
